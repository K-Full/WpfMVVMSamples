<Window x:Class="UserControllSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControllSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <RadioButton Content="1" IsChecked="{Binding IsChecked1.Value}"/>
            <RadioButton Content="2" IsChecked="{Binding IsChecked2.Value}"/>
            <RadioButton Content="3" IsChecked="{Binding IsChecked3.Value}"/>
            <Label Height="20" Content="{Binding lab.Value}" />
            <Button Height="20" Click="Button_Click"></Button>
            <local:UserControl1 Label="{Binding lab.Value}" />
        </StackPanel>
    </Grid>
</Window>
